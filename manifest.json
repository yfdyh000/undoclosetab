{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.0.1",

  "description": "__MSG_extensionDescription__",

  "applications": {
    "gecko": {
      "id": "UndoCloseTabEx@firefox.addon",
      "strict_min_version": "52.0"
    }
  },

  "icons": {
    "18": "icons/undoCloseTab.png",
    "34": "icons/undoCloseTab@2x.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/undoCloseTab.png"
  },

  "permissions": [
    "sessions", "tabs", "contextMenus"
  ],

  "default_locale": "en"
}
